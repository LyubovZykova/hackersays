!!! 5
%html
  %head
    %title Hacker Says
    %link(rel="stylesheet" type="text/css" href="themes/base.css")
    
    %script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
    %script(type="text/javascript" src="jquery.history-v1.7.1-r2.js")
    %script(type="text/javascript" src="script.js")
    
    :javascript
      var CURRENT_QUOTE = #{Yajl::Encoder.encode @quote};
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-12994604-4']);
      _gaq.push(['_setDomainName', 'hackersays.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      
  %body
    #header
      %h1 Hacker Says

    #quote
      %blockquote
        %p.quote &#8220;
        %p.content
        %p.author
          
    #tweet-button
    #fb-button
